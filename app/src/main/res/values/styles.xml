<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/heavy_clouds</item>
        <item name="android:textSize">@dimen/text_size_basic_data</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TickerViewSmall">
        <item name="android:text">@string/default_text_counter</item>
        <item name="android:textColor">@color/heavy_clouds</item>
        <item name="android:textSize">@dimen/text_size_ticker_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TickerViewBig">
        <item name="android:text">@string/default_text_counter</item>
        <item name="android:textColor">@color/heavy_clouds</item>
        <item name="android:textSize">@dimen/text_size_ticker_big</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="text_header_big">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/heavy_clouds</item>
        <item name="android:textSize">@dimen/text_size_header_big</item>
    </style>

    <style name="text_header_small">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/heavy_clouds</item>
        <item name="android:textSize">@dimen/text_size_header_small</item>
    </style>

    <style name="text_basic_data_on_dark_background">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/snow</item>
        <item name="android:textSize">@dimen/text_size_basic_data</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_basic_data_on_light_background">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/heavy_clouds</item>
        <item name="android:textSize">@dimen/text_size_basic_data</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="edit_text">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:hint">@string/dfset_default_hint_edit_text</item>
        <item name="android:inputType">number</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/background_edit_text_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/heavy_clouds</item>
        <item name="android:textColorHint">@color/heavy_clouds</item>
        <item name="android:textSize">@dimen/text_size_basic_data</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="button_with_stroke">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/heavy_clouds</item>
        <item name="android:textSize">@dimen/text_size_basic_data</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>strokeColor
    </style>

    <style name="Widget.Theme.Steps.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/heavy_clouds</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>